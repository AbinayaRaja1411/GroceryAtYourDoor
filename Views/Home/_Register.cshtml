@model GroceryAtYourDoor.ViewModels.RegisterViewModel
<div class="m-2 p-2">
    <form asp-action="_Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="FirstName" class="col-lg control-label">First Name</label>
            <input asp-for="FirstName" class="col-lg form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-lg control-label">Last Name</label>
            <input asp-for="LastName" class="col-lg form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-lg control-label">Email</label>
            <input asp-for="Email" class="col-lg form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-lg control-label">Phone</label>
            <input asp-for="PhoneNumber" class="col-lg form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="submit" value="Register" class="btn btn-primary col" />
        </div>
    </form>
</div>

