@model GroceryAtYourDoor.ViewModels.LoginViewModel
<form asp-action="_Login" class="form-inline m-2">
    <div class="form-group">
        <label asp-for="Email" class="sr-only mr-2">Email</label>
        <input asp-for="Email" class="form-control mr-2" placeholder="Email" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="sr-only mr-2">Password</label>
        <input asp-for="Password" class="form-control mr-2" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>
</form>


